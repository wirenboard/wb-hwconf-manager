{
  "module_wbe2-hdmi": {
    "title": "WBE2-HDMI module configuration",
    "type": "object",
    "properties": {
      "mode": {
        "type": "string",
        "title": "Screen resolution",
        "minLength": 1,
        "watch": { "available_hdmi_modes": "available_hdmi_modes" },
        "enumSource": [
          {
            "source": "available_hdmi_modes",
            "title": "{{item.title}}",
            "value": "{{item.value}}"
          }
        ],
        "default": "auto",
        "options": {
          "disable_collapse": true,
          "disable_array_add": true,
          "disable_array_delete": true,
          "disable_array_reorder": true
        },
        "propertyOrder": 1
      },
      "rotate": {
        "type": "string",
        "title": "Screen rotate",
        "enumSource": [
          {
            "source": [
              { "title": "0째", "value": "0" },
              { "title": "90째", "value": "90" },
              { "title": "180째", "value": "180" },
              { "title": "270째", "value": "270" }
            ],
            "title": "{{item.title}}",
            "value": "{{item.value}}"
          }
        ],
        "default": "0",
        "options": {
          "disable_collapse": true,
          "disable_array_add": true,
          "disable_array_delete": true,
          "disable_array_reorder": true
        },
        "propertyOrder": 2
      },
      "mouse": {
        "type": "string",
        "title": "Mouse cursor",
        "enumSource": [
          {
            "source": [
              { "title": "Hide", "value": "hide" },
              { "title": "Show", "value": "show" }
            ],
            "title": "{{item.title}}",
            "value": "{{item.value}}"
          }
        ],
        "default": "hide",
        "options": {
          "disable_collapse": true,
          "disable_array_add": true,
          "disable_array_delete": true,
          "disable_array_reorder": true
        },
        "propertyOrder": 2
      },
      "volume": {
        "type": "integer",
        "title": "Audio volume",
        "enumSource": [
          {
            "source": [
              { "title": "0%", "value": 0 },
              { "title": "5%", "value": 5 },
              { "title": "10%", "value": 10 },
              { "title": "15%", "value": 15 },
              { "title": "20%", "value": 20 },
              { "title": "25%", "value": 25 },
              { "title": "30%", "value": 30 },
              { "title": "35%", "value": 35 },
              { "title": "40%", "value": 40 },
              { "title": "45%", "value": 45 },
              { "title": "50%", "value": 50 },
              { "title": "55%", "value": 55 },
              { "title": "60%", "value": 60 },
              { "title": "65%", "value": 65 },
              { "title": "70%", "value": 70 },
              { "title": "75%", "value": 75 },
              { "title": "80%", "value": 80 },
              { "title": "85%", "value": 85 },
              { "title": "90%", "value": 90 },
              { "title": "95%", "value": 95 },
              { "title": "100%", "value": 100 }
            ],
            "title": "{{item.title}}",
            "value": "{{item.value}}"
          }
        ],
        "default": 100,
        "options": {
          "disable_collapse": true,
          "disable_array_add": true,
          "disable_array_delete": true,
          "disable_array_reorder": true
        },
        "propertyOrder": 3
      },
      "url": {
        "type": "string",
        "title": "Autoloaded URL from FireFox",
        "minLength": 10,
        "default": "http://localhost",
        "format": "uri",
        "propertyOrder": 4
      }
    },
    "required": ["mode", "rotate", "url", "mouse", "volume"]
